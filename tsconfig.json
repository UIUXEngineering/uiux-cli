{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "allowJs": false,
    "lib": ["es2015", "dom", "es2016.array.include"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "strictNullChecks": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "target": "es5",
    "types": [
      "node"
    ],
    "baseUrl": "."
  },

  "exclude": [
    "node_modules/",
    "templates/",
    "test/"
  ]
}
